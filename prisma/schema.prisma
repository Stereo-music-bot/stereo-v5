generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model botBlacklist {
  id String @id
}

model Guild {
  id               String       @id
  permissions      Permission[]
  permsEnabled     Boolean      @default(false)
  language         String       @default("en-US")
  defaultvolume    Int          @default(100)
  defaultfilter    String       @default("none")
  defaultbassboost String       @default("none")
  autoshuffle      Boolean      @default(false)
  autorepeat       Boolean      @default(false)
  announce         Boolean      @default(true)
  deleteAnnounce   Boolean      @default(true)
  partner          Boolean      @default(false)
  afk              Boolean      @default(false)
}

model Permission {
  id          String @id
  permissions BigInt
  Guild       Guild? @relation(fields: [guildId], references: [id])
  guildId     String
}

model Playlist {
  id     String   @id
  name   String
  songs  String[]
  userId String
}
